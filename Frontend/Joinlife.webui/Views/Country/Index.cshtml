@{
    ViewData["Title"] = "Index";
}
@model List<CountryViewModel>

<div class="row">


        <div class="my-1">
        <a asp-action="Create" class="btn btn-primary">Ekle</a>
        </div>
        @if (!Model.Any())
        {
            <div class="jumbotron text-center">No countries found.</div>
        }
        else
        {
            @foreach (var country in Model)
            {
                <div class="col-md-3 mt-2">
                    <div class="card" style="width: 18rem;">
                        <img src="@country.ImageUrl" class="card-img-top" style="max-height:128px" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@country.Name</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a asp-action="Detail" asp-route-id='@country.Id' class="btn btn-primary">Detaylar</a>
                        </div>
                    </div>
                </div>
            }
        }
</div>
