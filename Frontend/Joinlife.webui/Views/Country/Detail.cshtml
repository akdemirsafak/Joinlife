@{
    ViewData["Title"] = "Detail";
}
@model GetCountryByIdResponse

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-header h5 text-center">
                    @Model.Name
                </div>
                <div class="card-body">

                    <h5 class="mt-3">İller: </h5>
                    <ul class="list-group">
                        @foreach (var city in Model.Cities)
                        {
                            <li class="list-group-item text-decoration-none">@city.Name</li>
                        }
                    </ul>
                </div>
                <div class="card-footer btn-group">
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Güncelle</a>
                    <form method="post">
                        <button asp-action="Delete" asp-route-id="@Model.Id" type="submit"
                            class="btn btn-outline-danger">Sil</button>
                    </form>
                </div>
            </div>

            <a asp-action="Index">Listeye geri dön.</a>
        </div>
    </div>
</div>