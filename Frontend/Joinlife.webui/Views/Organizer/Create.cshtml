@{
    ViewData["Title"] = "Create";
}
@model CreateOrganizerInput


<div class="container">
    <h3 class="text-center">Yeni Organizasyon firması</h3>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form method="post" asp-action="Create">
                <div class="form-group mb-2">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" type="text" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="@Model.Description"></label>
                    <textarea asp-for="@Model.Description" type="text" class="form-control">
                    </textarea>
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>

            </form>
            <a asp-action="Index">Listeye geri dön.</a>
        </div>
        <div>
        </div>