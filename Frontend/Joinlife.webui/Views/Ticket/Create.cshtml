@{
    ViewData["Title"] = "Create";
}
@model CreateTicketInput


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <h5>Şuanda <span class="text-black"> @ViewBag.Event.Name </span> adlı etkinliğe bilet tanımlıyorsunuz : </h5>
            <form method="post" asp-action="Create">
                <input type="hidden"  asp-for="EventId" value="@ViewBag.Event.Id"/>
                <div class="form-group mb-2">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" type="number" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
            <a asp-action="Index" asp-controller="Event" asp-route-id="@ViewBag.Event.Id">Etkinliğe geri dön.</a>
        </div>
        <div>
        </div>

        @section Scripts
        {
            <partial name="_ValidationScriptsPartial" />
        }

