@{
    ViewData["Title"] = "Login";
}
@model SigninInputModel


<div class="container">
    <h3 class="text-center">Giriş yap</h3>
    <div class="row">
        <div class="col-md-6 offset-3">
            <form method="post" asp-action="Signin">

                <div class="form-group mb-2">
                    <label>UserName</label>
                    <input asp-for="Username" type="text" value="akdemirsafak" class="form-control" />
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group mb-2">
                    <label>Password</label>
                    <input asp-for="Password" type="password" value="Deneme_1234" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>   
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>

                <button type="submit" class="btn btn-primary">Giriş</button>

            </form>
            <a asp-action="Index" asp-controller="Home">Anasayfaya geri dön.</a>
        </div>
    <div>
</div>
