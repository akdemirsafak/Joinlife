@{
    ViewData["Title"] = "Signup";

}
@model SignupInputModel

<partial name="_ValidationScriptsPartial" />

<div class="container">
    <h3 class="text-center">Kayıt ol</h3>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <form method="post" asp-action="Signup">
                <div class="form-group mb-2">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                      <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group mb-2">
                    <label>UserName</label>
                    <input asp-for="Username" type="text" class="form-control" />
                     <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group mb-2">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>

                <button type="submit" class="btn btn-primary">Kayıt</button>

            </form>
            <a asp-action="Index" asp-controller="Home">Anasayfaya geri dön.</a>
        </div>
    <div>
</div>

