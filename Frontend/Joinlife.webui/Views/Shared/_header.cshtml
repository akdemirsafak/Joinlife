<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Joinlife.webui</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Country"
                            asp-action="Index">Ülkeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="Index">Şehirler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Venue" asp-action="Index">Mekanlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Event" asp-action="Index">Event</a>
                    </li>


                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Order"
                                        asp-action="CheckoutHistory">Siparişlerim</a></li>
                                <li><a class="dropdown-item" asp-controller="Basket" asp-action="Index">Sepete git</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider" />
                                </li>
                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">SignOut</a></li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Auth" asp-action="SignIn">Giriş
                        Yap</a>
                    <a asp-controller="Auth" asp-action="Signup" class="btn btn-outline-warning">Kayıt ol</a>
                }

            </div>
        </div>
    </nav>



</header>
