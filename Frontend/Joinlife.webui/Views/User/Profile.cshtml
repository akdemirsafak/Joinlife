@{
    ViewData["Title"] = "User Profile";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css" rel="stylesheet">


<style>

    .container {
        max-width: 600px;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .profile {
        text-align: center;
    }

        .profile img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .profile h1 {
            margin: 0;
        }

        .profile p {
            color: #666;
        }

    .details {
        margin-top: 30px;
    }

        .details h2 {
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        .details p {
            margin: 5px 0;
        }
</style>

    <div>
        <div class="profile">
        <img src="~/userprofileimage.jpg" alt="Profile Picture">
            <h2>@Model.UserName</h2>
            <h5>Telefon Numarası :+90 @Model.PhoneNumber</h5>
        <p>Kullanıcı numarası : @Model.Id</p>
        </div>
        <div class="details mx-2">
           
            <div class="mt-3">
                <h4>İletişim bilgileri</h4>
                <p>Email: @Model.Email</p>
                <p>Phone: 123-456-7890</p>
            </div>
            <div class="mt-3">
            <h4>Sosyal medya</h4>
                <p><i class="bi bi-twitter text-primary large-icon" style="font-size:2rem;"></i> Twitter : <a href="https://twitter.com/akdemirsafak" >Şafak Akdemir</a></p>
       
                <p><i class="bi bi-linkedin text-primary large-icon" style="font-size:2rem;"></i> LinkedIn: <a href="https://linkedin.com/in/akdemirsafak">Şafak Akdemir</a></p>
            </div>
        </div>
    </div>
